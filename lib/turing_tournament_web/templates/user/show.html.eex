<h2>Show User</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Username:</strong>
    <%= @user.username %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.credential.email %>
  </li>
</ul>

<span><%= link "Edit", to: Helpers.user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: Helpers.user_path(@conn, :index) %></span>
